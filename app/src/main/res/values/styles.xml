<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="TextViews">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_size5</item>
        <item name="android:layout_marginRight">@dimen/padding_size5</item>
    </style>

    <style name="TextViewCaption" parent="TextViews">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="TextViewBlack" parent="TextViews">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextViewGray" parent="TextViews">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextViewRight" parent="TextViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TextViewRound" parent="TextViews">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/roundrect</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingTop">@dimen/padding_size5</item>
        <item name="android:paddingBottom">@dimen/padding_size5</item>
        <item name="android:paddingLeft">@dimen/padding_size10</item>
        <item name="android:paddingRight">@dimen/padding_size10</item>
    </style>

    <style name="splitter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/splitter_size</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/padding_size10</item>
        <item name="android:layout_marginBottom">@dimen/padding_size10</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">@dimen/padding_size10</item>
        <item name="android:layout_marginRight">@dimen/padding_size10</item>
        <item name="android:layout_marginTop">@dimen/padding_size5</item>
        <item name="android:layout_marginBottom">@dimen/padding_size5</item>
    </style>

</resources>
